@model ManobreFacil.Models.Manobra

@{
    ViewData["Title"] = "Excluir Manobra";
}

<h3>Tem certeza que quer excluir a manobra?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manobrista)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manobrista.CPF)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Carro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Carro.Marca)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a lista</a>
    </form>
</div>
